<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listbackground"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_message_icon"
        android:src="@drawable/btn_radio_on_focused_holo_dark"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/email_message"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            style="@style/title"
            android:id="@+id/list_message_title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/list_message_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/subject"
            android:id="@+id/list_message_sender"
            android:layout_below="@id/list_message_title"
            android:layout_toRightOf="@id/list_message_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</RelativeLayout>